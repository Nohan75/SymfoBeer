        <div class="row">
            {{ form_start(form)}}

            {{ form_row(form.name,
                {
                    'attr': {
                    'novalidate': 'novalidate',
                    'class': 'border-2'
                }
                }
            ) }}

            {{ form_row(form.email,
                {
                    'attr': {
                    'novalidate': 'novalidate',
                    'class': 'border-2'
                }
                }) }}

            {{ form_row(form.photo,
                {
                    'attr': {
                    'novalidate': 'novalidate',
                    'class': 'border-2'
                }
                }
            ) }}

            {{ form_row(form.dateOfBirth) }}

            <button type="submit" class="btn btn-primary">Cr√©er</button>
