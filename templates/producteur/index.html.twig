{% extends 'base.html.twig' %}

{% block title %}Producteur index{% endblock %}

{% block body %}
    <h1>Producteur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Photo</th>
                <th>DateOfBirth</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for producteur in producteurs %}
            <tr>
                <td>{{ producteur.id }}</td>
                <td>{{ producteur.name }}</td>
                <td>{{ producteur.email }}</td>
                <td>{{ producteur.photo }}</td>
                <td>{{ producteur.dateOfBirth }}</td>
                <td>
                    <a href="{{ path('producteur_show', {'id': producteur.id}) }}">show</a>
                    <a href="{{ path('producteur_edit', {'id': producteur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('producteur_new') }}">Create new</a>
{% endblock %}
