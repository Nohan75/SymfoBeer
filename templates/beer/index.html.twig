{% extends 'base.html.twig' %}

{% block title %}Beer index{% endblock %}

{% block body %}
    <link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">
    <h1 class="font-serif font-medium text-2xl">Beer index</h1>
    <br>

    <table class="table">
        <thead>
            <tr>
                <th class="w-1/5">Id</th>
                <th class="w-1/5">Name</th>
                <th class="w-1/5">Type</th>
                <th class="w-1/5">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for beer in beers %}
            <tr>
                <td class="w-1/5 text-center">{{ beer.id }}</td>
                <td class="w-1/5 text-center">{{ beer.name }}</td>
                <td class="w-1/5 text-center">{{ beer.type }}</td>
                <td class="w-1/5 text-center">
                    <a href="{{ path('beer_show', {'id': beer.id}) }}"><button class="border-2 border-black"> Show</button></a>
                    <a href="{{ path('beer_edit', {'id': beer.id}) }}"><button class="border-2 border-black"> Edit</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>


    <a href="{{ path('beer_new') }}"><button class="rounded-full py-1 px-2 border-2 border-black" > Create new </button> </a>

{% endblock %}
